{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "--module-path",
                "path/to/javafx-sdk/lib",
                "--add-modules",
                "javafx.controls,javafx.fxml",
                "-d",
                "out",
                "src/main/java/module-info.java",
                "src/main/java/your/package/name/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
